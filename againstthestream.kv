#:kivy 1.8.0

<StreamGame>:
    fish: fish
    background: background
    canvas:
        Color:
            rgb: 137 / 255.0, 228 / 255.0, 135 / 255.0
    Background:
        id: background
        pos: root.pos
    Fish:
        id: fish
        center_x: root.center_x
        center_y: root.center_y
    Label:
        font_size: 70
        center_x: root.center_x
        top: root.top - 30
        markup: True
        text: "[color=ffffff]" + str(root.score) + "[/color]"

<Background>:
    image_one: image_one
    image_two: image_two
    Image:
        id: image_one
        source: "images/background.jpg"
        pos: 0, 0
        size: 1920, 1080
    Image:
        id: image_two
        source: "images/background.jpg"
        pos: root.width, 0
        size: 1920, 1080

<Skillball>:
    skillball_image: skillball_image
	width: 14
    Image:
        id: skillball_image
        source: "images/score_red.png"
        center_x: root.center_x
        y: root.position - 20

<Obstacle>:
    obstacle_image: obstacle_image
    width: 10
    Image:
        id: obstacle_image 
		source: "images/obstacle.png"
        center_x: root.center_x
        y: root.position - 20

<Fish>:
    fish_image: image
    size: 50, 50
    Image:
        id: image
        source: "images/fishdown.png"
        size: root.size
        pos: root.pos

<NewGamePopup>:
    size_hint: 0.35, 0.47
    background: "images/background_popup.png"  
    FloatLayout:
        Label:
            pos_hint: {'y':0.05}
        Button:
            text: "Поделиться"
			font_size: 30
            background_normal: 'images/button.png'
            pos_hint: {'center_x':0.5, 'y':0.1}
            size_hint: 0.55, 0.27
            on_press: root.share()
        Button:
            background_normal: 'images/none.png'
            pos_hint: {'center_x':1.1, 'y':0.9}
            size_hint: 0.1, 0.1
            on_press: root.reset()
            Image:
                source: 'images/cross.png'
                width: 60
                y: self.parent.y + self.parent.height - 80
                x: self.parent.x
